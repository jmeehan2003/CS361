{{> header }}

<h1>Bloom, Terra Search Results</h1>
<h2>Your search for {{searchWord}} produced the following results:</h2>
<br>
<table class="table">
	<thead>
	<tr>
	  <th scope="col">Category</th>
	  <th scope="col">Name</th>
	  <th scope="col">Details</th>
	</tr>
	</thead>
	<tbody align="center">
		{{#each search}}
		<tr cellpadding="8">
			<td>{{Category}}</td>
			<td>{{Name}}</td>
			<td>{{Details}}
		</tr>
		{{/each}}
	</tbody>
</table>
<br>

